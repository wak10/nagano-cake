<div class="d-flex align-items-center my-3">
  <h2>商品一覧</h2>
  <span>(全</span>
    <% @all_items.count %>
    <%= @all_items.where(is_active: "true").count %>
  <span>件)</span>
</div>

<div class="d-flex flex-wrap justify-content-center">
<% @items.each do |item| %>
  <div class="m-4">
      <%= link_to item_path(item) do %>
        <%= attachment_image_tag item, :image, :fill, 200, 200 %></br>
        <%= item.name %></br>
      <% end %>
      <spam>¥</spam>
      <%= item.price %>
  </div>
<% end %>
</div>
  <%= paginate(@items) %>