<!--商品詳細-->
<div>
  <%= attachment_image_tag @items, :image, :fill, 300, 300 %>
  <h4><%= @items.name %></h4>
  <p><%= @items.introduction %></p>
  <div>
    ¥<%= @items.price %>
    <span>(税込)</span>
  </div>

<!--カート機能-->
  <%= form_with model: @cart_items, url:cart_items_path, local:true do |f| %>

      <%= f.select :amount, *[1..10] %>
      <%= f.hidden_field :customer_id, value: current_customer.id %>
      <%= f.hidden_field :item_id, value: @items.id %>
      <%= f.submit "カートに入れる", class: "btn-primary" %>

  <% end %>


</div>