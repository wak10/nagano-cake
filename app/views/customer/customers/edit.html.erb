<%= form_with model: @customer, url:customers_path, local:true do |f| %>
  <div class="d-inline-flex m-4">
    <h4 class="bg-light px-4 align-items-center">会員情報編集</h4>
  </div>

  <div class="field my-2">
    <span style="margin-right:6rem">氏名</span>
      <%= f.text_field :last_name, autofocus: true, autocomplete: "family-name" %>
      <%= f.text_field :first_name, autofocus: true, autocomplete: "given-name" %>
  </div>
  <div class="field my-2">
    <span style="margin-right:4rem">フリガナ</span>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "family-name" %>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "given-name" %>
  </div>
  <div class="field my-2">
    <span style="margin-right:4rem">郵便番号</span>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal-code" %>
  </div>
  <div class="field my-2">
    <span style="margin-right:6rem">住所</span>
    <%= f.text_field :address, autofocus: true, autocomplete: "street-address" %>
  </div>
  <div class="field my-2">
    <span style="margin-right:4rem">電話番号</span>
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "tel" %>
  </div>
  <div class="field my-2">
    <span style="margin-right:1rem">メールアドレス</span>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>


  <div class=" d-flex align-items-center justify-content-center">
    <%= f.submit "編集内容を保存", class:"btn btn-success mr-5" %>
<% end %>
    <%= link_to "退会する", unsubscribe_path, method: :get,class:"btn btn-danger" %>
  </div>
