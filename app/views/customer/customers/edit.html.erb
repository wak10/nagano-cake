<%= form_with model: @customer, url:customers_path, local:true do |f| %>
<h2>会員情報編集</h2>

  <div class="field">
    <span>氏名</span>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "given-name" %>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "family-name" %>
  </div>
  <div class="field">
    <span>フリガナ</span>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "given-name" %>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "family-name" %>
  </div>
  <div class="field">
    <span>郵便番号</span>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal-code" %>
  </div>
  <div class="field">
    <span>住所</span>
    <%= f.text_field :address, autofocus: true, autocomplete: "street-address" %>
  </div>
  <div class="field">
    <span>電話番号</span>
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "tel" %>
  </div>
  <div class="field">
    <span>メールアドレス</span>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "編集内容を保存" %>
<% end %>
    <%= link_to "退会する", unsubscribe_path(current_customer) %>
  </div>