<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customer/shared/error_messages", resource: resource %>

  <div class="d-inline-flex m-4">
    <h4 class="bg-light px-4 align-items-center">新規会員登録</h4>
  </div>
  <div class="field">
    <table>
      <tr>
        <td><p>名前</p></td>
        <td><p style="padding-right:50px"><%= f.label :last_name, "(姓)" %><%= f.text_field :last_name, autofocus: true, autocomplete: "given-name" %></p></td>
        <td><p><%= f.label :first_name, "(名)" %><%= f.text_field :first_name, autofocus: true, autocomplete: "family-name" %></p></td>
      </tr>
      <tr>
        <td><p>フリガナ</p></td>
        <td><p><%= f.label :last_name_kana, "(セイ)" %><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "given-name" %></p></td>
        <td><p><%= f.label :first_name_kana, "(メイ)" %><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "family-name" %></p></td>
      </tr>
      <tr>
        <td><p style="padding-right:100px"><%= f.label :email, "メールアドレス" %></p></td>
        <td><p><%= f.email_field :email, autofocus: true, autocomplete: "email" %></p></td>
      </tr>
      <tr>
        <td><p><%= f.label :postal_code, "郵便番号(ハイフン無し)" %></p></td>
        <td><p><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal-code" %></p></td>
      </tr>
      <tr>
        <td><p><%= f.label :address, "住所" %></p></td>
        <td><p><%= f.text_field :address, autofocus: true, autocomplete: "street-address" %></p></td>
      </tr>
      <tr>
        <td><p><%= f.label :telephone_number, "電話番号(ハイフン無し)" %></p></td>
        <td><p><%= f.text_field :telephone_number, autofocus: true, autocomplete: "tel" %></p></td>
      </tr>
      <tr>
        <td><p><%= f.label :password, "パスワード(6文字以上)"  %></p></td>
        <td><p><%= f.password_field :password, autocomplete: "new-password" %></p></td>
      </tr>
      <tr>
        <td><p><%= f.label :password_confirmation, "パスワード(確認用)" %></p></td>
        <td><p><%= f.password_field :password_confirmation, autocomplete: "new-password" %></p></td>
      </tr>
      <tr>
        <td></td>
        <td><p><%= f.submit "新規登録", class:"btn btn-success mx-5" %></p></td>
      </tr>
    </table>

  <div class="d-inline-flex m-4">
    <h4 class="bg-light px-4 align-items-center">既に登録済みの方</h4>
  </div>
  <div class="container row d-flex align-items-center ml-4">
    <span class="mr-2"><%= render "customer/shared/links" %></span>
      <span>からログインしてください。</span>
  </div>
<% end %>