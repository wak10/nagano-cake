  <div class="d-inline-flex m-4">
    <h4 class="bg-light px-4 align-items-center">
      <%= @customer.last_name %>
      <%= @customer.first_name %>さんの会員情報編集
    </h4>
  </div>


<%= form_with model: @customer, url:admin_customer_path, method: :patch, local:true do |f| %>
<div class="d-flex align-items-center justify-content-center">
    <table>
      <tr>
        <td style="padding-right:100px">会員ID</td>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <td>氏名</td>
        <td><%= f.text_field :last_name %><%= f.text_field :first_name %></td>
      </tr>
      <tr>
        <td>フリガナ</td>
        <td><%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %></td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td><%= f.text_field :postal_code %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= f.text_area :address %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><%= f.text_field :telephone_number %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= f.text_field :email %></td>
      </tr>
      <tr>
        <td>会員ステータス</td>
        <td>
          <%= f.radio_button :is_active, true %>
          <%= f.label :is_active, '有効', value: true %>
          <%= f.radio_button :is_active, false %>
          <%= f.label :is_active, '退会', value: false %>
        </td>
      </tr>
    </table>
</div>
<div class=" d-flex align-items-center justify-content-center">
  <%= f.submit '変更を保存',class: "mr-3 btn btn-success" %>
  <% end %>
</div>