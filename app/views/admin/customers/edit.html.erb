<h2>
  <%= @customer.last_name %>
  <%= @customer.first_name %>
  さんの会員情報編集
</h2>

<%= form_with model: @customer, url:admin_customer_path, method:patch, local:true do |f| %>
  <p>会員ID <%= customer.id %></p>
  <p>
    氏名
    <%= f.text_field :last_name %>
    <%= f.text_field :first_name %>
  </p>
  <p>
    フリガナ
    <%= f.text_field :last_name_kana %>
    <%= f.text_field :first_name_kana %>
  </p>
  <p>郵便番号 <%= f.text_field :postal_code %></p>
  <p>住所 <%= f.text_area :address %></p>
  <p>電話番号 <%= f.text_field :telephone_number %></p>
  <p>メールアドレス <%= f.text_field :email %></p>
  <p>会員ステータス
    <%= f.radio_button :is_active, true %>
    <%= f.label :is_active, '有効', value: true %>
    <%= f.radio_button :is_active, false %>
    <%= f.label :is_active, '退会', value: false %>
  </p>
  <%= f.submit '変更を保存' %>
<% end %>