<div class="d-inline-flex m-4">
  <h4 class="bg-light px-4 align-items-center">注文履歴詳細</h4>
</div>
<div class=" d-flex align-items-center justify-content-center">
  <div class="container">
    <table class="mb-4">
      <tr>
        <td><b style="padding-right:100px">購入者</b></td>
        <td><%= @order.name %></td>
      </tr>
      <tr>
        <td><b style="padding-right:100px">注文日</b></td>
        <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
      </tr>
      <tr>
        <td><b style="padding-right:100px">配送先</b></td>
        <td><%= @order.address %></td>
      </tr>
      <tr>
        <td><b style="padding-right:100px">支払方法</b></td>
        <td><%= @order.payment_method %></td>
      </tr>
      <tr>
        <td><b>注文ステータス</b></td>
        <td>
          <%= form_with model: @order, url:admin_order_path, local:true do |f| %>
            <%= f.select :status, {'入金待ち': '入金待ち', '入金確認': '入金確認', '製作中': '製作中', '発送準備中': '発送準備中', '発送済み': '発送済み'} %>
            <%= f.submit '更新', class: "btn btn-success" %>
          <% end %>
        </td>
      </tr>
    </table>
    <div class=" d-flex">
      <table class="table table-hover col-6 mr-5">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th>製作ステータス</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @order.order_details.each do |order_detail| %>
          <tr>
            <td>
              <%= order_detail.item.name %>
            </td>
            <td>
              <%= order_detail.price %>
            </td>
            <td>
              <%= order_detail.amount %>
            </td>
            <td>
              <%= order_detail.price * order_detail.amount %>
            </td>
            <td>
            <%= form_with model: order_detail, url:admin_order_detail_path, local:true do |f| %>
              <%= f.select :making_status, {'製作不可': '製作不可', '製作待ち': '製作待ち', '製作中': '製作中', '製作完了': '製作完了'} %></td>
            <td>
              <%= f.submit '更新', class: "btn btn-success" %>
            <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
      <table>
      <tr>
        <td><b style="padding-right:100px">商品合計</b></td>
        <td><%= @order.total_payment-800 %>円</td>
      </tr>
      <tr>
        <td><b style="padding-right:100px">送料</b></td>
        <td><%= @order.carrage %>円</td>
      </tr>
      <tr>
        <td><b style="padding-right:100px">請求金額合計</b></td>
        <td><%= @order.total_payment %>円</td>
      </tr>
    </table>
   </div>
  </div>
</div>