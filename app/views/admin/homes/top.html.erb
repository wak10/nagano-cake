<h2>注文履歴一覧</h2>
  <table>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
    <% @orders.each do |order| %>
    <tr>
      <td> <%= link_to order.created_at, admin_order_path(order.id) %> </td>
      <td><%= order.customer.name %> </td>
      <td><%= order.order_details.amount %> </td>
      <td><%= order.status %> </td>
    </tr>
    <% end %>
  </table>
  <%= paginate(@orders) %>