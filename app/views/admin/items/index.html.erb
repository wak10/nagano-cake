<h2>商品一覧</h2>
<%= link_to "+", new_admin_item_path(@items) %>
  <table>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
    <% @items.each do |item| %>
    <tr>
      <td><%= item.id %> </td>
      <td>  <%= link_to item.name, admin_item_path(item.id) %> </td>
      <td><%= item.price %> </td>
      <td><%= item.genre.name %> </td>
      <td>
        <p>
        <% if item.is_active == true %>
          販売中
        <% else %>
          販売停止中
        <% end %>
         </p>
      </td>
    </tr>
    <% end %>

  </table>
  <%= paginate(@items) %>