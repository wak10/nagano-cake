<div class="container">
  <div class="d-inline-flex m-4">
    <h4 class="bg-light px-4 align-items-center">商品新規登録</h4>
  </div>
  <div class="d-flex align-items-center justify-content-center">
    <%= form_with model: @item, url:admin_items_path, local:true do |f| %>
      <div class="container row m-2">
        <p class="col">商品画像</p>
        <div class="col"><%= f.attachment_field :image %></div>
      </div>
      <div class="container row m-2">
        <p class="col-3">商品名</p>
        <%= f.text_field :name %>
      </div>
      <div class="container row m-2">
      <p class="col-3">商品説明</p>
      <%= f.text_area :introduction %>
    </div>
      <div class="container row m-2">
      <p class="col-3">ジャンル</p>
      <%= f.collection_select(:genre_id, @genres, :id, :name) %>
    </div>
      <div class="container row m-2">
      <p class="col-3">税抜価格</p>
      <%= f.text_area :price %>
    </div>
      <div class="container row m-2">
        <p class="col-4">販売ステータス</p>
        <p class="px-2"><%= f.radio_button :is_active, true %>
        <%= f.label :is_active, '販売中', value: true %></p>
        <p><%= f.radio_button :is_active, false %>
        <%= f.label :is_active, '販売停止中', value: false %></p>
      </div>
        <div class="d-flex align-items-center justify-content-center">
          <%= f.submit '新規登録', class: "btn btn-primary"%>
        </div>
    <% end %>
  </div>
</div>

