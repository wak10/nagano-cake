  <div class="d-inline-flex m-4">
    <h4 class="bg-light px-4 align-items-center">ジャンル一覧･追加</h4>
  </div>
  <div class="d-flex">
    <span class="mx-3">ジャンル名</span>
    <span class="mx-3">
      <%= form_with model:@genre, url:admin_genres_path, local:true do |f| %>
        <%= f.text_field :name %>
        <%= f.submit '新規登録', class: "mx-3 btn btn-success"  %>
      <% end %>
    </span>
  </div>


  <table class="table table-hover col-4" style="margin-top:50px">
    <tr>
      <th>ジャンル</th>
      <th></th>
    </tr>
    <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %> </td>
      <td> <%= link_to '編集する', edit_admin_genre_path(genre.id) %> </td>
    </tr>
    <% end %>
  </table>
