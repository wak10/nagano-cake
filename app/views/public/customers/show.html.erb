<h2>マイページ</h2>
<div>
<b>登録情報</b>
<%= link_to "編集する", edit_customer_path(@customers) %>
</div>

<table>
  <tr>
    <td>氏名</td>
    <td>
      <%= @customers.last_name %>
    <%= @customers.first_name %>
    </td>
  </tr>
  <tr>
    <td>カナ</td>
    <td>
      <%= @customers.last_name_kana %>
      <%= @customers.first_name_kana %>
    </td>
  </tr>
  <tr>
    <td>郵便番号</td>
    <td><%= @customers.postal_code %></td>
  </tr>
  <tr>
    <td>住所</td>
    <td><%= @customers.address %></td>
  </tr>
  <tr>
    <td>電話番号</td>
    <td><%= @customers.telephone_number %></td>
  </tr>
  <tr>
    <td>メールアドレス</td>
    <td><%= @customers.email %></td>
  </tr>

</table>
<div>
  <b>配送先</b>
  <%= link_to "一覧を見る", addresses_path(@customers) %>
</div>
<div>
  <b>注文履歴</b>
  <%= link_to "一覧を見る", orders_path(@customers.orders), method: :get %>
</div>