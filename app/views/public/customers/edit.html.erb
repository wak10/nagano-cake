

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
<h2>新規ユーザー登録</h2>

  <div class="field">
  <span>名前</span>
    <%= f.label :first_name, "(姓)" %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "given-name" %>
    <%= f.label :last_name, "(名)" %>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "family-name" %>
  </div>

  <div class="field">
  <span>フリガナ</span>
    <%= f.label :first_name_kana, "(セイ)" %>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "given-name" %>
    <%= f.label :last_name_kana, "(メイ)" %>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "family-name" %>
  </div>
  <div class="field">
    <%= f.label :postal_code, "郵便番号" %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal-code" %>
  </div>
  <div class="field">
    <%= f.label :address, "住所" %>
    <%= f.text_field :address, autofocus: true, autocomplete: "street-address" %>
  </div>
  <div class="field">
    <%= f.label :telephone_number, "電話番号" %>
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "tel" %>
  </div>
  <div class="field">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <div class="actions">
    <%= f.submit "編集内容を保存" %>
  </div>
<% end %>